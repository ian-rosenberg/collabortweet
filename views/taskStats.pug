//- index.pug
doctype html
html
	head
		include includes/head.pug
	body
		include includes/nav.pug

		<!-- Main jumbotron -->
		div(class="jumbotron")
			div(class="container")
				h2 Welcome. Select your task.
		
		//- Display options
		div(class="container")
			if dataMap.pairTasks.length > 0
				h2 Available Comparison Tasks:
				each v in dataMap.pairTasks
					div(class="row")
						div(class="panel panel-default")

							div(class="panel-heading") 
								h4 
									a(href="/taskStats/" + v.taskId) Task #{v.taskId}: #{v.taskName}

							div(class="panel-body")
								p Comparisons Answered: #{v.counter}
								p #{v.question}

			if dataMap.labelTasks.length > 0
				h2 Available Labeling Tasks:
				- var uniqueLabelCount
				- var elementCount
				each v in dataMap.labelTasks
					if v.taskId == 4
						- uniqueLabelCount = v.labelCount
						- elementCount = v.eCount / dataMap.labelTasks.length
					else
						- uniqueLabelCount = v.labelCount
						- elementCount = v.eCount
					div(class="row")
						div(class="panel panel-default")

							div(class="panel-heading") 
								h4 
									a(href="/taskStats/" + v.taskId) Task #{v.taskId}: #{v.taskName}

							div(class="panel-body")
								p Elements to Label: #{elementCount}
								p Labels Provided: #{uniqueLabelCount}
								p #{v.question}

			if dataMap.rangeTasks.length > 0
				h2 Available Range Tasks:
				each v in dataMap.rangeTasks
					div(class="row")
						div(class="panel panel-default")

							div(class="panel-heading") 
								h4 
									a(href="/taskStats/" + v.taskId) Task #{v.taskId}: #{v.taskName}

							div(class="panel-body")
								p Elements to Label: #{v.eCount}
								p Labels Provided: #{v.rdCount}
								p #{v.question}


		include includes/jsFooter.pug